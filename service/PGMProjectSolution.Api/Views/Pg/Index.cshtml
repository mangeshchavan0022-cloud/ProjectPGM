<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Create PG Owner</title>

    <!-- Bootstrap 5 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />

    <style>
        .form-card {
            max-width: 800px;
            margin: 40px auto;
            padding: 25px;
            background: #fff;
            border-radius: 10px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        }

        label {
            font-weight: 600;
        }
    </style>
</head>
<body>

    <div class="form-card">
        <h3 class="mb-4">Create PG Owner</h3>

        <form id="pgOwnerForm">

            <div class="row mb-3">
                <div class="col-md-6">
                    <label>Owner ID</label>
                    <input type="text" id="Id" class="form-control" placeholder="Auto or Manual ID">
                </div>

                <div class="col-md-6">
                    <label>Full Name</label>
                    <input type="text" id="FullName" class="form-control" placeholder="Enter full name">
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-md-6">
                    <label>User Name</label>
                    <input type="text" id="UserName" class="form-control" placeholder="Enter username">
                </div>

                <div class="col-md-6">
                    <label>Email</label>
                    <input type="email" id="Email" class="form-control" placeholder="Enter email">
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-md-6">
                    <label>Email Confirmed</label>
                    <select id="EmailConfirmed" class="form-select">
                        <option value="true">Yes</option>
                        <option value="false">No</option>
                    </select>
                </div>

                <div class="col-md-6">
                    <label>Phone Number</label>
                    <input type="text" id="PhoneNumber" class="form-control" placeholder="Enter phone number">
                </div>
            </div>

            <div class="row mb-4">
                <div class="col-md-6">
                    <label>User Type</label>
                    <select id="UserType" class="form-select">
                        <option selected disabled>Select User Type</option>
                        <option>PGOwner</option>
                        <option>Admin</option>
                        <option>Agency</option>
                        <option>Customer</option>
                    </select>
                </div>
            </div>

            <button type="button" class="btn btn-primary" onclick="submitOwnerForm()">Create PG Owner</button>

        </form>
    </div>

    <script>
        function submitOwnerForm() {
            let owner = {
                id: document.getElementById('Id').value,
                fullName: document.getElementById('FullName').value,
                userName: document.getElementById('UserName').value,
                email: document.getElementById('Email').value,
                emailConfirmed: document.getElementById('EmailConfirmed').value,
                phoneNumber: document.getElementById('PhoneNumber').value,
                userType: document.getElementById('UserType').value
            };

            console.log("PG Owner Submitted:", owner);
            alert("PG Owner Created Successfully!");

            // You can POST this to MVC Controller
            // fetch("/AdminUser/CreatePgOwner", { method:"POST", headers:{ "Content-Type":"application/json" }, body: JSON.stringify(owner) });
        }
    </script>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>
