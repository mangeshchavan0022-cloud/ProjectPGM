<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Approve PG Properties</title>

    <!-- Bootstrap 5 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

    <style>
        .form-card {
            max-width: 800px;
            margin: 40px auto;
            padding: 25px;
            background: #fff;
            border-radius: 10px;
            box-shadow: 0px 4px 10px rgba(0,0,0,0.1);
        }

        label {
            font-weight: 600;
        }
    </style>
</head>
<body>

    <div class="form-card">
        <h3 class="mb-4">Approve PG Properties</h3>

        <form id="pgForm">

            <div class="row mb-3">
                <div class="col-md-6">
                    <label>PG Name</label>
                    <input type="text" class="form-control" id="pgName">
                </div>

                <div class="col-md-6">
                    <label>Address</label>
                    <input type="text" class="form-control" id="address">
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-md-6">
                    <label>Total Rooms</label>
                    <input type="number" class="form-control" id="rooms">
                </div>
            </div>

            <h5 class="mt-4">Dropdowns:</h5>

            <div class="row mb-3">
                <div class="col-md-6">
                    <label>PG Owner</label>
                    <select class="form-select" id="pgOwner">
                        <option selected disabled>Select Owner</option>
                    </select>
                </div>

                <div class="col-md-6">
                    <label>City</label>
                    <select class="form-select" id="city">
                        <option selected disabled>Select City</option>
                    </select>
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-md-6">
                    <label>State</label>
                    <select class="form-select" id="state">
                        <option selected disabled>Select State</option>
                    </select>
                </div>

                <div class="col-md-6">
                    <label>PG Type</label>
                    <select class="form-select" id="pgType">
                        <option selected disabled>Select Type</option>
                        <option>Boys</option>
                        <option>Girls</option>
                        <option>Co-Living</option>
                    </select>
                </div>
            </div>

            <div class="row mb-4">
                <div class="col-md-6">
                    <label>Status</label>
                    <select class="form-select" id="status">
                        <option>Approved</option>
                        <option>Pending</option>
                        <option>Rejected</option>
                    </select>
                </div>
            </div>

            <button type="button" class="btn btn-primary" onclick="submitForm()">Submit</button>

        </form>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        // Fill Dropdown Data (Static OR Fetch from DB/API)
        const owners = ["Ramesh","Suresh","Anita","Kiran"];
        const cities = ["Mumbai","Pune","Bangalore","Hyderabad"];
        const states = ["Maharashtra", "Karnataka", "Telangana"];

        function loadDropdown(id, data) {
            const select = document.getElementById(id);
            data.forEach(item => {
                let option = document.createElement("option");
                option.text = item;
                select.add(option);
            });
        }

        // Load data on page load
        window.onload = function () {
            loadDropdown("pgOwner", owners);
            loadDropdown("city", cities);
            loadDropdown("state", states);
        }

        // Form Submit Action
        function submitForm() {
            let pg = {
                name: document.getElementById("pgName").value,
                address: document.getElementById("address").value,
                rooms: document.getElementById("rooms").value,
                owner: document.getElementById("pgOwner").value,
                city: document.getElementById("city").value,
                state: document.getElementById("state").value,
                type: document.getElementById("pgType").value,
                status: document.getElementById("status").value
            };

            console.log("PG Details Submitted:", pg);
            alert("Form Submitted Successfully!");
        }
    </script>

</body>
</html>
